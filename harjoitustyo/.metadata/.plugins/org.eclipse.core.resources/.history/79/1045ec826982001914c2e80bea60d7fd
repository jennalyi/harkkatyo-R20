public class Raportit {
	BorderPane paneeliraportit;
	GridPane kaikki;
	ChoiceBox<String> raportti;
	Stage window;
	Scene paasivu;
	Label paaotsikko, Lchoiceselite, Ltulosta, Lonnistuiko, kalenterivihje, kalenterivihje2;
